<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ayvytr.gaokao.MarkdownActivity">

    <include layout="@layout/layout_appbar"/>

    <com.ayvytr.customview.loading.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fadeScrollbars="false"
                android:scrollbarSize="@dimen/_30dp"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_160dp"
                    android:paddingLeft="@dimen/_5dp"
                    android:paddingRight="@dimen/_5dp"
                    android:textSize="@dimen/_14sp"/>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:animateLayoutChanges="true"
                    android:clickable="true"
                    android:src="@drawable/top"
                    android:tint="@color/colorPrimary"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:animateLayoutChanges="true"
                    android:clickable="true"
                    android:src="@drawable/bottom"
                    android:tint="@color/colorPrimary"/>
            </LinearLayout>
        </RelativeLayout>

    </com.ayvytr.customview.loading.StatusView>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
